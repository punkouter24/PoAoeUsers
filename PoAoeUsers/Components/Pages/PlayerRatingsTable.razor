@using PoAoeUsers.Data
@typeparam TItem where TItem : IPlayerRating

<h4>@Title</h4>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>@RatingTitle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Rating</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string RatingTitle { get; set; }

    [Parameter]
    public IEnumerable<TItem> Items { get; set; }
}